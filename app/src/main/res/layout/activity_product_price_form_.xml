                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/activity_product_price_form_raw_total_unit__guideline_2"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textColor="@color/black"
                    android:fontFamily="@font/title_font"
                    android:text="@{productprice.fromDoubletoString(productprice.unitrawcost)}"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/activity_product_price_form_raw_total_cost__guideline_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.40" />
                <TextView
                    android:id="@+id/activity_product_price_form_raw_total_cost_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/activity_product_price_form_raw_total_cost__guideline_1"
                    app:layout_constraintRight_toLeftOf="@+id/activity_product_price_form_raw_total_cost__guideline_2"
