                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_plus_button"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey">
                <TextView
                    android:id="@+id/activity_product_price_form_fixed_variable_cost_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/activity_product_price_form_fixed_variable_cost_guideline_1"
                    android:textColor="@color/black"
                    android:text="@string/activity_product_price_form_fixed_variable_cost_name_title_text"
                    android:fontFamily="@font/title_font"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/activity_product_price_form_fixed_variable_cost_guideline_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.40" />
                <TextView
                    android:id="@+id/activity_product_price_form_fixed_variable_cost_percentage_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/activity_product_price_form_fixed_variable_cost_guideline_1"
                    app:layout_constraintRight_toLeftOf="@+id/activity_product_price_form_fixed_variable_cost_guideline_2"
                    android:textColor="@color/black"
                    android:fontFamily="@font/title_font"
                    android:text="@string/activity_product_price_form_fixed_variable_cost_percentage_title_text"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/activity_product_price_form_fixed_variable_cost_guideline_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.65" />
                <TextView
                    android:id="@+id/activity_product_price_form_fixed_variable_cost_value_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/activity_product_price_form_fixed_variable_cost_guideline_2"
                    app:layout_constraintRight_toLeftOf="@+id/activity_product_price_form_fixed_variable_cost_guideline_3"
                    android:textColor="@color/black"
                    android:fontFamily="@font/title_font"
                    android:text="@string/activity_product_price_form_fixed_variable_cost_value_title_text"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/activity_product_price_form_fixed_variable_cost_guideline_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.90" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/activity_product_price_form_fixed_variable_cost_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/activity_product_price_form_fixed_variable_cost_guideline_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.30" />
                <TextView
                    android:id="@+id/activity_product_price_form_fixed_variable_cost_variable_cost_title_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/activity_product_price_form_fixed_variable_cost_guideline_11"
                    app:layout_constraintRight_toLeftOf="@+id/activity_product_price_form_fixed_variable_cost_guideline_22"
                    android:textColor="@color/black"
                    android:fontFamily="@font/title_font"
                    android:text="@string/activity_product_price_form_fixed_variable_cost_variable_cost_title_bottom"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/activity_product_price_form_fixed_variable_cost_guideline_22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.75" />
                <TextView
                    android:id="@+id/activity_product_price_form_fixed_variable_cost_fixedvariable_cost_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/activity_product_price_form_fixed_variable_cost_guideline_22"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textColor="@color/black"
                    android:fontFamily="@font/title_font"
                    android:text="@{productprice.fromDoubletoString(productprice.unitfixedvariablecost)}"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/activity_product_price_form_fixed_variable_total_cost_guideline_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.30" />
                <TextView
                    android:id="@+id/activity_product_price_form_fixed_variable_total_cost_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/activity_product_price_form_fixed_variable_total_cost_guideline_11"
                    app:layout_constraintRight_toLeftOf="@+id/activity_product_price_form_fixed_variable_total_cost_guideline_22"
                    android:textColor="@color/black"
                    android:fontFamily="@font/title_font"
                    android:text="@string/activity_product_price_form_fixed_variable_total_cost_text"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/activity_product_price_form_fixed_variable_total_cost_guideline_22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.75" />
                <TextView
                    android:id="@+id/activity_product_price_form_fixed_variable_total_cost_text_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/activity_product_price_form_fixed_variable_total_cost_guideline_22"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textColor="@color/black"
                    android:fontFamily="@font/title_font"
                    android:text="@{productprice.fromDoubletoString(productprice.totalfixedvariablecost)}"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/activity_product_price_form_fixed_variable_total_cost_guideline_111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.30" />
                <TextView
                    android:id="@+id/activity_product_price_form_fixed_fixedvariablepercentage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/activity_product_price_form_fixed_variable_total_cost_guideline_111"
                    app:layout_constraintRight_toLeftOf="@+id/activity_product_price_form_fixed_variable_total_cost_guideline_222"
                    android:textColor="@color/black"
                    android:fontFamily="@font/title_font"
                    android:text="@string/activity_product_price_form_fixedvariablepercentage_text2"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/activity_product_price_form_fixed_variable_total_cost_guideline_222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.75" />
                <TextView
                    android:id="@+id/activity_product_price_form_fixed_variable_fixedvariablepercentage_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/activity_product_price_form_fixed_variable_total_cost_guideline_222"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textColor="@color/black"
                    android:fontFamily="@font/title_font"
                    android:text="@{productprice.fromDoubletoString(productprice.fixedvariablepercentage)}"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tool_bar_color"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/title_font"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:text="@string/activity_product_price_form_overview_title"
                    />
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey">
                <TextView
                    android:id="@+id/activity_product_price_form_overview_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/activity_product_price_form_guideline_1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/title_font"
                    android:text="@string/activity_product_price_form_overview_description_title"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/activity_product_price_form_guideline_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.70" />
                <TextView
                    android:id="@+id/activity_product_price_form_value_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/activity_product_price_form_guideline_1"
