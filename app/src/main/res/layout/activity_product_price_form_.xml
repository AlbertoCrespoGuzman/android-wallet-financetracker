<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data  >
        <variable name="productprice" type="ta.na.mao.database.models.productprice.ProductPrice"/>
    </data>
    <ScrollView
        android:id="@+id/activity_product_price_form_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tool_bar_color"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/title_font"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:text="@string/activity_product_price_form_title"
                    />
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/activity_product_price_form_name_inputlayout"
                style="@style/inputLayout"
                android:hint="@string/name"
                android:fontFamily="@font/title_font"
                app:hintTextAppearance="@style/EditTextHintStyle"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/activity_product_price_form_name_edittext"
                    style="@style/inputText"
                    android:fontFamily="@font/title_font"
                    android:text="@={productprice.name}"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/activity_product_price_form_price_inputlayout"
                style="@style/inputLayout"
                android:hint="@string/activity_product_price_form_price_text"
                android:fontFamily="@font/title_font"
                app:hintTextAppearance="@style/EditTextHintStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/activity_product_price_form_price_edittext"
                    style="@style/inputText"
                    android:inputType="numberDecimal"
                    android:fontFamily="@font/title_font"
                    android:text="@={productprice.fromDoubletoString(productprice.unitsaleprice)}"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/activity_product_price_form_quantity_inputlayout"
                style="@style/inputLayout"
                android:hint="@string/activity_product_price_form_quantity_text"
                android:fontFamily="@font/title_font"
                app:hintTextAppearance="@style/EditTextHintStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/activity_product_price_form_quantity_edittext"
                    style="@style/inputText"
                    android:inputType="numberDecimal"
                    android:fontFamily="@font/title_font"
                    android:text="@={productprice.fromIntegertoString(productprice.quantity)}"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tool_bar_color"
                android:layout_marginTop="10dp"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/title_font"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:text="@string/activity_product_price_form_raw_title"
                    android:layout_centerInParent="true"
                    />
                <RelativeLayout
                    android:id="@+id/activity_product_price_form_raw_add_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:foreground="@drawable/ripple_white">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_plus_button"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey">
                <TextView
                    android:id="@+id/activity_product_price_form_raw_description_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/activity_product_price_form_raw_guideline_1"
                    android:textColor="@color/black"
                    android:text="@string/dialog_product_price_raw_form_description_text"
                    android:fontFamily="@font/title_font"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/activity_product_price_form_raw_guideline_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.30" />
                <TextView
                    android:id="@+id/activity_product_price_form_raw_quantity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/activity_product_price_form_raw_guideline_1"
                    app:layout_constraintRight_toLeftOf="@+id/activity_product_price_form_raw_guideline_2"
                    android:textColor="@color/black"
                    android:text="@string/dialog_product_price_raw_form_quantity_text_2"
                    android:fontFamily="@font/title_font"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/activity_product_price_form_raw_guideline_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.50" />
                <TextView
                    android:id="@+id/activity_product_price_form_raw_unit_cost_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/activity_product_price_form_raw_guideline_2"
                    app:layout_constraintRight_toLeftOf="@+id/activity_product_price_form_raw_guideline_3"
                    android:textColor="@color/black"
                    android:text="@string/dialog_product_price_raw_form_unit_cost_text"
                    android:fontFamily="@font/title_font"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/activity_product_price_form_raw_guideline_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.70" />
                <TextView
                    android:id="@+id/adapter_simple_four_elements_value_element"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/activity_product_price_form_raw_guideline_3"
                    app:layout_constraintRight_toLeftOf="@+id/activity_product_price_form_raw_guideline_4"
                    android:textColor="@color/black"
                    android:text="@string/dialog_product_price_raw_form_totalcost_text"
                    android:fontFamily="@font/title_font"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/activity_product_price_form_raw_guideline_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.90" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/activity_product_price_form_raw_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/activity_product_price_form_raw_unit_cost__guideline_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.40" />
                <TextView
                    android:id="@+id/activity_product_price_form_raw_unit_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/activity_product_price_form_raw_unit_cost__guideline_1"
                    app:layout_constraintRight_toLeftOf="@+id/activity_product_price_form_raw_total_unit__guideline_2"
                    android:textColor="@color/black"
                    android:fontFamily="@font/title_font"
                    android:text="@string/activity_product_price_form_raw_unit_cost_title_text"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/activity_product_price_form_raw_total_unit__guideline_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.80" />
                <TextView
                    android:id="@+id/activity_product_price_form_raw_total_unit_unitrawcost"
