<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/background_no_padding">

    <RelativeLayout
        android:id="@+id/fragment_financialcontrol_charts_content_balance_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <LinearLayout
            android:id="@+id/fragment_financialcontrol_charts_content_balance_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/fragment_financialcontrol_charts_content_balance_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_book"
                    android:text="test"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/fragment_financialcontrol_charts_content_balance_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/title_font"
                    android:text="Saldo"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/filter_future_layout"
            android:background="@drawable/filter_future_checked_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignBaseline="@+id/fragment_financialcontrol_charts_content_balance_layout"
            android:padding="5dp"
            android:layout_marginRight="20dp">
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/filter_future_checker_image"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    app:srcCompat="@drawable/ic_checkbox_checked"
                    android:layout_marginRight="3dp"/>
                <TextView
                    android:id="@+id/filter_future_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_future_text"
                    android:fontFamily="@font/title_font"
                    android:textSize="12dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <View android:id="@+id/separator"
        android:background="#ffffff"
        android:layout_width = "fill_parent"
        android:layout_height="1dip"
        android:layout_centerVertical ="true"
        android:layout_alignParentTop="true"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
   <TextView
       android:id="@+id/fragment_financialcontrol_charts_content_balance_text_chart"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textAlignment="textStart"
       android:text="@string/main_monthy_balance"
       android:fontFamily="@font/title_font"
       android:textSize="18dp"
       android:layout_marginLeft="20dp"
       android:layout_marginBottom="10dp"
       android:layout_marginTop="10dp"/>
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/fragment_financialcontrol_charts_content_balance_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="310dp"/>
    <TextView
        android:id="@+id/fragment_financialcontrol_charts_content_outgo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:text="@string/outgo_text"
        android:fontFamily="@font/title_font"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/fragment_financialcontrol_charts_content_outgo_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="310dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"/>
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/fragment_financialcontrol_charts_content_outgo_pie_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="310dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/fragment_financialcontrol_charts_content_outgo_value_zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/fragment_financialcontrol_charts_content_income_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:text="@string/income_text"
        android:fontFamily="@font/title_font"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/fragment_financialcontrol_charts_content_income_chart"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:minHeight="310dp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/fragment_financialcontrol_charts_content_income_pie_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="310dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/fragment_financialcontrol_charts_content_income_value_zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>