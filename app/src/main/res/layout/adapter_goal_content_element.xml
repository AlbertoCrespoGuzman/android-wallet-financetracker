<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/adapter_goal_header_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/outgo_red"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true">
                <RelativeLayout
                    android:layout_width="42dp"
                    android:layout_height="42dp">
                        <ImageView
                            android:id="@+id/adapter_goal_header_moneybag"
                            android:layout_width="42dp"
                            android:layout_height="24dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            app:srcCompat="@drawable/ic_money_bag_plus"
                            android:layout_marginRight="15dp"
                            />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/adapter_goal_header_income_outgo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/title_font"
                    android:textSize="18dp"
                    android:text="test"/>
                </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp">
                <TextView
                    android:id="@+id/adapter_goal_header_value"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:fontFamily="@font/title_font"
                    android:text="test"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/adapter_goal_header_options"
                android:layout_width="42dp"
                android:layout_height="42dp">
            <ImageView

                android:layout_width="20dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_options"
                />
            </RelativeLayout>
        </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="52dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/adapter_goal_category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="@font/title_font"
            android:text="test"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/adapter_goal_date_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/title_font"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" atÃ© "
                android:textSize="18dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:fontFamily="@font/title_font"
                />
            <TextView
                android:id="@+id/adapter_goal_date_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                android:textSize="18dp"
                android:fontFamily="@font/title_font"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </RelativeLayout>



</LinearLayout>