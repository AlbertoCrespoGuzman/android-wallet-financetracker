<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:orientation="horizontal">
        <ImageView
            android:id="@+id/adapter_dialog_statement_details_paid"
            android:layout_width="13dp"
            android:layout_height="13dp"
            app:srcCompat="@drawable/ic_check_mark_sign"
            android:layout_marginRight="30dp"/>
        <TextView
            android:id="@+id/adapter_dialog_statement_details_paid_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/title_font"
            android:textSize="16dp"
            />

</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">
                <TextView
                    android:id="@+id/adapter_dialog_statement_details_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:fontFamily="@font/font_book"
                    />
        </LinearLayout>
</RelativeLayout>