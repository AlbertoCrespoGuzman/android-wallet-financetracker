<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adapter_statement_content_cardview"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="5dp"
    android:paddingRight="15dp"
    >
    <LinearLayout
        android:id="@+id/adapter_main_view_pager_price_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="7dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="18dp"
                    app:srcCompat="@drawable/ic_tag_primary_color"/>
            </RelativeLayout>
            <View android:id="@+id/separator"
                android:layout_marginTop="2dp"
                android:background="@color/colorPrimary"
                android:layout_width = "1dp"
                android:layout_height="65dp"
                android:maxHeight="65dp"
                android:layout_gravity="center_horizontal"
                android:foregroundGravity="center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/adapter_calculator_price_white_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/adapter_calculator_price_primary_color_layout"
            android:foreground="@drawable/ripple_primary_color"
            >
            <TextView
                android:id="@+id/adapter_calculator_price_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/title_font"
                android:textColor="@color/white"
                android:textSize="22dp"
                />
            <TextView
                android:id="@+id/adapter_calculator_price_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_book"
                android:textColor="@color/black"
                android:textSize="22dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/adapter_calculator_price_more_info_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/adapter_calculator_price_more_info"
                    android:textColor="@color/white"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/title"
                    android:textSize="18dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/adapter_calculator_price_edit_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_primary_color"
                        android:layout_marginEnd="10dp"
                        android:foreground="@drawable/ripple_white">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_pencil"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/adapter_calculator_price_delete_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_red_color"
                        android:foreground="@drawable/ripple_white">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_trash"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ic_plus_button_primary_color">

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>