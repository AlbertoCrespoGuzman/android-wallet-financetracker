<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_white_rounded"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/view_page_main_activity_profile_layout"
    android:paddingBottom="100dp"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/activity_main_calculator_tag_title"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_avatar_primary_color"/>
        <TextView
            style="@style/loginTitle"
            android:text="@string/view_page_main_activity_profile_title"
            android:layout_margin="2dp"
            android:fontFamily="@font/font_book"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/activity_main_calculator_arrow"
            android:layout_width="12dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_arrow_point_to_right_black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_primary_color"
            android:layout_margin="10dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_avatar_white"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_marginRight="20dp">
            <TextView
                android:id="@+id/view_page_main_activity_profile_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/title_font"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="Nome do Usuário"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/view_page_main_activity_profile_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/title_font"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="e-mail do usuário"
                android:layout_gravity="center_horizontal"
                android:foreground="@drawable/ripple_primary_color"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>