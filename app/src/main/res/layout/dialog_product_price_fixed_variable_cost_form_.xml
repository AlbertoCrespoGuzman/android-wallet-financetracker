<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data >
        <variable name="fixedvariablecost" type="ta.na.mao.database.models.productprice.FixedVariableCost"/>
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tool_bar_color"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/title_font"
                android:textSize="18dp"
                android:textAlignment="center"
                android:text="@string/dialog_product_price_fixed_variable_cost_title_text"
                />
        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/inputLayoutOutlinedBox"
            android:fontFamily="@font/title_font"
            android:hint="@string/dialog_product_price_fixed_variable_cost_form_description_text"
            app:hintTextAppearance="@style/EditTextHintStyle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dialog_product_price_fixed_variable_cost_form_description"
                style="@style/inputText"
                android:fontFamily="@font/title_font"
                android:text="@={fixedvariablecost.description}"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/inputLayoutOutlinedBox"
            android:fontFamily="@font/title_font"
            android:hint="@string/dialog_product_price_fixed_variable_cost_form_percentage_text"
            app:hintTextAppearance="@style/EditTextHintStyle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dialog_product_price_fixed_variable_cost_form_percentage"
                style="@style/inputText"
                android:fontFamily="@font/title_font"
                android:maxLength="3"
                android:inputType="number"
                android:text="@={fixedvariablecost.fromDoubletoString(fixedvariablecost.percentage)}"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/title_font"
                android:text="@string/dialog_product_price_fixed_variable_cost_form_value_text"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/dialog_product_price_fixed_variable_cost_form_value"
                android:fontFamily="@font/title_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@{fixedvariablecost.fromDoubletoString(fixedvariablecost.value)}"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:weightSum="2">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/dialog_product_price_fixed_variable_cost_form_cancel_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_product_price_raw_form_cancel_button_text"
                    style="@style/button_dialog_cancel"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/dialog_product_price_fixed_variable_cost_form_save_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    style="@style/button_dialog_accept"
                    android:text="@string/dialog_product_price_raw_form_save_button_text"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</layout>